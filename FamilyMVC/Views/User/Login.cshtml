
@{
    ViewBag.Title = "Login";
}

<h2>Login</h2>
<p>Please Enter our UserName and Password. <a href="/User/SignUp">Register</a> if you don't have an account</p>
@using (Html.BeginForm("Login", "User", FormMethod.Post))
{
    <div class="form-group">
        @Html.Label("User Name", new { htmlAttributes = new { @class = "form-control" } })
        @Html.Editor("UserName", new { htmlAttributes = new { @class = "form-control", @required = true } })

    </div>
    <div class="form-group">
        @Html.Label("Password", new { htmlAttributes = new { @class = "form-control" } })
        @Html.Editor("Password", new { htmlAttributes = new { @class = "form-control" , @type = "Password", @required=true } })

    </div>

    <div class="form-group">
        <div class="col-md-offset-2 col-md-10">
            <h6 style="color:red">@ViewBag.LoginError</h6>
            <input type="submit" value="Login" class="btn btn-default" />
        </div>
    </div>

}
